LOCAL_VOLUME_ROOT=./docker/volumes/postgres

DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=postgres
DATABASE_PASSWORD=password
DATABASE_DB=flex-gym
DATABASE_URL=postgresql://${DATABASE_USER}:${DATABASE_PASSWORD}@${DATABASE_HOST}:${DATABASE_PORT}/${DATABASE_DB}

# Bitbucket OAuth (replace with values from your Bitbucket OAuth consumer)
BITBUCKET_CLIENT_ID=
BITBUCKET_CLIENT_SECRET=
BITBUCKET_REDIRECT_URI=http://localhost:3000/api/bitbucket/callback

# Codex Platform configuration
CODEX_API_KEY=
CODEX_BASE_URL=https://api.openai.com/v1
CODEX_EMBEDDING_MODEL=text-embedding-3-small

# Optional: override the number of ai/ .mdc files fetched for each session context
# BITBUCKET_AI_FOLDER_MAX_FILES=60
